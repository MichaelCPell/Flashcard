<p id="notice"><%= notice %></p>

<h1>Course Info</h1>
<p>
  <b>Name:</b>
  <%= @course.name %>
</p>

<h1>Decks</h1>
<% @course.decks.each do |deck| %>
  <%= deck.name %>
<% end %>


<% if @course.decks.empty?  %>
  <%= link_to "No Decks... Make one!", new_deck_path %>
<% else %>
  <br>
  <%= link_to "Add a Deck", new_deck_path %>
<% end %>


<br>
<br>

<%= link_to 'Edit Course', edit_course_path(@course), class: "btn btn-large btn-control" %>
<br>
<br>
 <%= link_to 'Delete Course', @course, confirm: 'Are you sure?', method: :delete, class: "btn btn-danger btn-control btn-large" %>
