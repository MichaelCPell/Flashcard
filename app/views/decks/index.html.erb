<h1>Listing decks</h1>

<table>
  <tr>
    <th>Creator</th>
    <th>Course</th>
    <th>Doc type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @decks.each do |deck| %>
  <tr>
    <td><%= deck.creator %></td>
    <td><%= deck.course_id %></td>
    <td><%= deck.doc_type %></td>
    <td><%= link_to 'Show', deck %></td>
    <td><%= link_to 'Edit', edit_deck_path(deck) %></td>
    <td><%= link_to 'Destroy', deck, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

